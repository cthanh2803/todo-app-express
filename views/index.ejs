<!DOCTYPE <html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Todo List</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
</head>
  <body>
    <div class="container mt-3">
      <h2>Add Todo<h2>
      <form action="/show" method="POST">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Your todo..." name="title">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>

    <div class="container">
      <h2>Todos List<h2>
        <table class="table mt-4">
          <th>Title</th>
          <tbody>
          <% todos.forEach(function(details) { %>
            <tr>
              <td><%= details.title %></td>
              <td>
                <a href="/edit/<%= details._id %>" class="btn btn-link">Edit</a> | 
                <a href="/delete/<%= details._id %>" class="btn btn-link">Delete</a>
              </td>
            </tr>
          <% }) %>
          </tbody>
        </table>
    </div>
    <div class="container">
      <div>
        <h2>
          <a href="https://github.com/cthanh2803/todo-app-express">Github</a>
        </h2>
      </div>
    </div>
  
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
  </body>
</html>